<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wijdemans.songunscrambler.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtScrambled"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="type scrambled code here"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnUnscramble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unscramble"
        app:layout_constraintTop_toBottomOf="@+id/txtScrambled"
        tools:layout_editor_absoluteX="134dp" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="368dp"
        android:layout_height="21dp"
        android:ems="10"
        android:text="test hallo .....cccc "
        app:layout_constraintTop_toBottomOf="@+id/btnUnscramble"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtResults"
        android:layout_width="368dp"
        android:layout_height="323dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/txtInfo"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
